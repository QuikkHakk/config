set preview true
set hidden true

cmd mkdir ${{
    set -f
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkfile ${{
    set -f
    printf "File Name: "
    read ans
    $EDITOR $ans
}}

cmd openterm ${{
    $TERMINAL &
}}

map m
map n
map "'"
map '"'
map d
map c
map e
map z

map ee $$EDITOR "$f"
map es $sudo $EDITOR "$f"
map z $$VIEWER "$f"
map L $$LATEX "$f"
map P $python3 "$f"

map dd delete
map x cut
map y copy
map <enter> $$EDITOR "$f"
map <esc> quit
map nf mkfile
map md mkdir
map ot openterm
map r rename

map gh cd  ~/
map cf $$EDITOR ~/.config/fish/config.fish
map cv $$EDITOR ~/.vimrc
map cl $$EDITOR ~/.config/lf/lfrc

